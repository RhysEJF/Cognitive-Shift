      <>
        <line x1="32" y1="10" x2="32" y2="26" stroke="#c8a45c" stroke-width="0.5" opacity="0.3"/>
        <line x1="32" y1="38" x2="32" y2="54" stroke="#c8a45c" stroke-width="0.5" opacity="0.3"/>
        <line x1="10" y1="32" x2="26" y2="32" stroke="#c8a45c" stroke-width="0.5" opacity="0.3"/>
        <line x1="38" y1="32" x2="54" y2="32" stroke="#c8a45c" stroke-width="0.5" opacity="0.3"/>
      </>
    )}
